<Window x:Class="StudentList_Command.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentList_Command"
        Title="StudenList_Binding" Height="300" Width="500">
    <Grid>
        <ListBox ItemsSource="{Binding Students}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding FirstName}" Width="100" Margin="5"/>
                        <TextBox Text="{Binding LastName}" Width="100" Margin="5"/>
                        <TextBox Text="{Binding StudentCode}" Width="100" Margin="5"/>
                        <TextBlock Text="{Binding FullName}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
